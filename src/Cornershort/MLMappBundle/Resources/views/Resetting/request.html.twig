{% extends "CornershortMLMappBundle:Layout:fos_user_layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block page_css %}
<link href="{{ asset('bundles/cornershortmlmapp/assets/pages/css/login.css')}}" rel="stylesheet" type="text/css"/>
{% endblock page_css %}

{% block fos_user_content %}

  <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">

      <h3 class="form-title">Reset Password</h3>
      <div class="alert alert-danger display-hide">
        <button class="close" data-close="alert"></button>
        <span>
        Enter any username and password. </span>
      </div>

      <div class="form-group">
        <div class="input-icon right">
          <label class="control-label visible-ie8 visible-ie9" for="username">{{ 'resetting.request.username'|trans }}</label>
          <input class="form-control form-control-solid placeholder-no-fix" type="email" id="username" name="username" required="required" placeholder="Enter Email Address" />
          {% if invalid_username is defined %}
              <p id="invalid_user" style="padding: 10px 0 10px 2px;" class="font-red-thunderbird"><strong>The email address '{{invalid_username}}' does not exist</strong></p>
          {% endif %}
        </div>
      </div>

      <div>
          <input class="btn btn-success uppercase" type="submit" value="Click here to Reset Password" />
      </div>
      <div class="form-actions">
          <a href="{{ path('fos_user_security_login') }}" class="btn btn-sm default uppercase">&lt; Back to Login Page</a>
      </div>
  </form>


{% endblock fos_user_content %}
