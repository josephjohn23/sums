{% extends "CornershortMLMappBundle:Layout:fos_user_layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

  <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">

    <h3 class="form-title">Reset Password</h3>

    <div class="form-group">
      <div class="input-icon right">
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control form-control-solid placeholder-no-fix', 'placeholder': 'Enter New Password'} }) }}
        {{ form_errors(form.plainPassword.first) }}
      </div>
    </div>

    <div class="form-group">
      <div class="input-icon right">
         {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control form-control-solid placeholder-no-fix', 'placeholder': 'Confirm New Password'} }) }}
         {{ form_errors(form.plainPassword.second) }}

      </div>
    </div>

    {{ form_widget(form._token) }}
    {{ form_errors(form._token) }}

    <div class="pull-left">
        <input class="btn btn-success uppercase" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
    </div>

    <div class="pull-right">
        <a href="/" class="btn btn-default uppercase">Back to Login Page</a>
    </div>

</form>

{% endblock fos_user_content %}

{% block javascripts %}
  {{ parent() }}

  <script>
    jQuery(document).ready(function() {
      $('ul').css('padding','5px 0 0 2px');
      $('ul li').css({
        'color': 'red',
        'listStyle': 'none'
      });
    });
  </script>

{% endblock %}
